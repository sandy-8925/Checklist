<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.sanpra.checklist" >

    <application android:icon="@drawable/launcher_icon" android:label="@string/app_name"
        android:name=".application.ChecklistApp"
        android:theme="@style/AppTheme"
        >
        <activity android:name="org.sanpra.checklist.activity.ChecklistActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme"
                  android:resizeableActivity="true"
                  android:supportsPictureInPicture="false"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <layout
                android:minWidth="300dp"
                android:minHeight="450dp"
                android:defaultWidth="300dp"
                android:defaultHeight="600dp"
                />
        </activity>
    </application>
</manifest>
