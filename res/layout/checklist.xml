<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/new_item_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:height="20sp"
        android:text="+"
        android:textSize="15sp"
    />

    <EditText
        android:id="@+id/new_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/new_item_add_button"
        android:height="20sp"
        android:inputType="text|textAutoCorrect|textCapSentences"
        android:singleLine="true"
    />

    <ListView
        android:id="@+id/items_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/new_item_add_button"
        >
        <requestFocus />
    </ListView>

</RelativeLayout>